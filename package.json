{
  "name": "apis-tester",
  "displayName": "APIs Tester",
  "author": "bmqy",
  "description": "在 VS Code 中测试 API，支持分组、请求头、Body 预设和 WebDAV 备份",
  "version": "0.0.12",
  "publisher": "bmqy",
  "license": "MIT",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmqy/apis-tester.git"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Debuggers",
    "Testing"
  ],
  "activationEvents": [
    "onCommand:apiTester.openPanel",
    "onView:apiTesterView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "APIs Tester",
      "properties": {
        "apiTester.webdav.url": {
          "type": "string",
          "default": "",
          "description": "WebDAV 服务地址，例如 https://dav.example.com"
        },
        "apiTester.webdav.username": {
          "type": "string",
          "default": "",
          "description": "WebDAV 用户名"
        },
        "apiTester.webdav.password": {
          "type": "string",
          "default": "",
          "description": "WebDAV 密码（明文保存在设置中）"
        },
        "apiTester.webdav.path": {
          "type": "string",
          "default": "/apis-tester-backup",
          "description": "备份目录，默认 /apis-tester-backup"
        },
        "apiTester.webdav.autoBackup": {
          "type": "boolean",
          "default": false,
          "description": "开启后，每次接口/分组变更后自动备份到 WebDAV"
        },
        "apiTester.proxy.enable": {
          "type": "boolean",
          "default": false,
          "description": "是否启用代理"
        },
        "apiTester.proxy.host": {
          "type": "string",
          "default": "",
          "description": "代理服务器地址，例如 127.0.0.1"
        },
        "apiTester.proxy.port": {
          "type": "number",
          "default": 8080,
          "description": "代理服务器端口"
        },
        "apiTester.proxy.username": {
          "type": "string",
          "default": "",
          "description": "代理用户名（可选）"
        },
        "apiTester.proxy.password": {
          "type": "string",
          "default": "",
          "description": "代理密码（可选）"
        }
      }
    },
    "commands": [
      {
        "command": "apiTester.openPanel",
        "title": "APIs Tester: 打开面板"
      },
      {
        "command": "apiTester.newApi",
        "title": "APIs Tester: 新建 API",
        "icon": "$(add)"
      },
      {
        "command": "apiTester.backupWebdavCommand",
        "title": "APIs Tester: WebDAV 备份",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "apiTester.restoreWebdavCommand",
        "title": "APIs Tester: WebDAV 恢复",
        "icon": "$(cloud-download)"
      },
      {
        "command": "apiTester.openSettings",
        "title": "APIs Tester: 打开设置",
        "icon": "$(gear)"
      },
      {
        "command": "apiTester.exportData",
        "title": "APIs Tester: 导出数据",
        "icon": "$(export)"
      },
      {
        "command": "apiTester.importData",
        "title": "APIs Tester: 导入数据",
        "icon": "$(import)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apiTester",
          "title": "APIs Tester",
          "icon": "media/api-tester.svg"
        }
      ]
    },
    "views": {
      "apiTester": [
        {
          "id": "apiTesterView",
          "name": "",
          "type": "webview"
        }
      ]
    },
    "submenus": [
      {
        "id": "apiTester.moreActions",
        "label": "更多",
        "icon": "$(ellipsis)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "apiTester.newApi",
          "when": "view == apiTesterView",
          "group": "navigation@1",
          "icon": "$(add)"
        },
        {
          "submenu": "apiTester.moreActions",
          "when": "view == apiTesterView",
          "group": "navigation@2"
        }
      ],
      "apiTester.moreActions": [
        {
          "command": "apiTester.exportData",
          "group": "1_data@1"
        },
        {
          "command": "apiTester.importData",
          "group": "1_data@2"
        },
        {
          "command": "apiTester.backupWebdavCommand",
          "group": "2_webdav@1"
        },
        {
          "command": "apiTester.restoreWebdavCommand",
          "group": "2_webdav@2"
        },
        {
          "command": "apiTester.openSettings",
          "group": "3_settings@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "release": "vsce package && echo 'VSIX 文件已生成，可以手动发布或提交 tag 触发自动发布'",
    "test": "echo \"No tests yet\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.84.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "webdav": "^5.6.0",
    "http-proxy-agent": "^7.0.0",
    "https-proxy-agent": "^7.0.0"
  }
}
